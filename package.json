{
  "name": "gosend.delivery.service",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engines": {
    "node": ">= 14.16 <15"
  },
  "repository": "https://github.com/HZN-one/gosend.delivery.service",
  "scripts": {
    "start": "node build/index.js",
    "start:dev": "nodemon --config restart.json",
    "clean": "rm -rf coverage build tmp",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest i --colors --verbose --coverage",
    "cloud:build": "gcloud builds submit --tag gcr.io/PROJECT_ID/SERVICE_NAME",
    "cloud:run": "gcloud run deploy SERVICE_NAME --image gcr.io/PROJECT_ID/SERVICE_NAME --allow-unauthenticated --region us-central1",
    "cloud:run:new": "npm run cloud:build && npm run cloud:run",
    "docker:build": "docker build -t SERVICE_NAME .",
    "docker:run": "docker run -p 8080:8080 SERVICE_NAME",
    "docker:run:new": "npm run docker:build && npm run docker:run"
  },
  "author": "HZN",
  "license": "Apache-2.0",
  "dependencies": {
    "@google-cloud/firestore": "^4.15.1",
    "ansi-regex": "^6.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^5.3.0",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "joi": "^17.4.2",
    "module-alias": "^2.2.2",
    "tslib": "~2.3.0",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "_moduleAliases": {
    "@server": "build",
    "@config": "build/config",
    "@controllers": "build/controllers",
    "@middlewares": "build/middlewares",
    "@validations": "build/validations",
    "@services": "build/services",
    "@models": "build/models"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.14.45",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "~4.28.2",
    "@typescript-eslint/parser": "~4.28.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-jest": "~24.3.6",
    "firestore-jest-mock": "^0.17.0",
    "jest": "^27.2.1",
    "jest-html-reporter": "^3.4.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "tsutils": "~3.21.0",
    "typescript": "^4.3.5"
  }
}